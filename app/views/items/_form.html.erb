<h1><%= @item.id ? 'Edit Item' : 'Create Item' %></h1>
<hr />
<%= form_with(model: [@list, @item], local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :price %>
  <%= f.number_field :price, placeholder: "$" %>
  <%= f.submit %>
<% end %>